@model ASI.Basecode.WebApp.Models.CategoryModel

@{
    ViewData["Title"] = "Create Category";
}

<h2 class="text-2xl font-bold mb-6">@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="space-y-4">
    <div class="form-group">
        <label asp-for="Name" class="block text-sm font-medium text-gray-700">Name</label>
        <input asp-for="Name" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="block text-sm font-medium text-gray-700">Description</label>
        <input asp-for="Description" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Icon" class="block text-sm font-medium text-gray-700">Icon</label>
        <input asp-for="Icon" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="Icon" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Color" class="block text-sm font-medium text-gray-700">Color</label>
        <input asp-for="Color" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="Color" class="text-red-500 text-sm"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="block text-sm font-medium text-gray-700">Type</label>
        <input asp-for="Type" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
        <span asp-validation-for="Type" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
        Create
    </button>
    <a asp-action="Index" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
        Back to List
    </a>
</form>
