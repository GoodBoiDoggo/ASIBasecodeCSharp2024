@model ASI.Basecode.WebApp.Models.CategoryModel

@{
    ViewData["Title"] = "Delete Category";
}

<h2 class="text-2xl font-bold mb-6">@ViewData["Title"]</h2>

<h3 class="text-xl text-gray-800 mb-4">Are you sure you want to delete this category?</h3>

<div class="bg-gray-100 p-4 rounded-lg shadow-md">
    <dl class="grid grid-cols-2 gap-4">
        <dt class="font-bold text-gray-700">Name:</dt>
        <dd>@Model.Name</dd>

        <dt class="font-bold text-gray-700">Icon:</dt>
        <dd>@Model.Icon</dd>

        <dt class="font-bold text-gray-700">Color:</dt>
        <dd>@Model.Color</dd>

        <dt class="font-bold text-gray-700">Type:</dt>
        <dd>@Model.Type</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post" class="mt-6">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
        Delete
    </button>
    <a asp-action="Index" class="bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
        Cancel
    </a>
</form>
